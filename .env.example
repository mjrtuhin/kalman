# KALMAN Environment Variables Template
# Copy this file to .env and fill in your values

# Hugging Face (for model storage)
HF_TOKEN=your_hugging_face_token_here

# Ollama (local LLM)
OLLAMA_API_URL=http://localhost:11434

# Database
DATABASE_URL=sqlite:///data/cache/kalman.db

# API Settings
API_RATE_LIMIT=100
CACHE_TTL_DAYS=30

# Development
DEBUG=True
LOG_LEVEL=INFO
